              <div class="field <%= field.to_param %>">
                <%= label_tag field.to_param, field.label %>
                <div class="input">
                  <% if field.bindings[:object].send(field.name).file? %>
                    <div class="row">
                      <%= image_tag(field.bindings[:object].send(field.name).url) %><br />
                    </div>
                  <% end %>
                  <div class="row">
                    <%= form.file_field(field.name, field.html_attributes) %>
                  </div>
                </div>
                <% if field.has_errors? %>
                <span class="errorMessage"><%= "#{field.label } #{field.errors.first}" %></span>
                <% end %>
                <p class="help"><%= field.help %></p>
              </div>