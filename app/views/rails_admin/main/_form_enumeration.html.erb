<%
  collection = field.bindings[:object].send("#{field.name}_enum")
%>

<div class="field <%= field.to_param %>">
  <%= label_tag field.to_param, field.label %>
  <%= form.select field.name, collection, {:include_blank => true}, field.html_attributes.merge({ :class => "enum" }) %>
  <% if field.has_errors? %>
    <span class="errorMessage"><%= "#{field.label } #{field.errors.first}" %></span>
  <% end %>
  <p class="help"><%= field.help %></p>
</div>