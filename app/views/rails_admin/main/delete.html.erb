<% head_javascript "rails_admin/application.js" %>
      <div class="ra-block">
        <div class="ui-widget-header">
          Confirmation de suppression
        </div>
        <div class="ra-block-content">
<%= render(:partial => 'layouts/rails_admin/flash', :locals => {:flash => flash}) -%>
          <p>Êtes-vous sûr de vouloir supprimer <%= @abstract_model.pretty_name.downcase %> &ldquo;<strong><%= @model_config.list.with(:object => @object).object_label %></strong>&rdquo; ? Tous ces objets dépendants seront supprimés :</p>
          <%= render :partial => "delete_notice", :object => @object %>
          <%= form_for(@object, :url => rails_admin_destroy_path(:model_name => @abstract_model.to_param, :id => @object.id), :html => {:method => "delete"}) do %>
            <ul class="submit clearfix">
              <li>
                <%= submit_tag t("admin.delete.confirmation"), :class => "ra-button ui-state-highlight" %>
              </li>
              <li>
                <%= submit_tag t("admin.new.cancel"), :class => "ra-button", :name => "_continue" %>
              </li>
            </ul>
          <% end =%>
        </div>
      </div>