.ra-timeline {
  padding: 0 12px;
  background-color: #f6f6f6;
  border: 1px solid #dbdbdb;
  height: 53px;
  position: relative;
}

.ra-timeline .range {
  margin-top:16px;
  width: 12px;
  height: 20px;
  display: inline;
  overflow: hidden;
  position: absolute;
  text-indent: 9999px;
}

.ra-timeline .previous {
  left: 0px;
  background-image: url(<%= asset_path('rails_admin/timeline/arrow_left.png') %>);
}

.ra-timeline .next {
  right: 0px;
  background-image: url(<%= asset_path('rails_admin/timeline/arrow_right.png') %>);
}

.ra-timeline .handle {
  width: 54px;
  height: 99px;
  position: absolute;
  top: -13px;
  background-image: url(<%= asset_path('rails_admin/timeline/handler.png') %>);
}

.ra-timeline ul {
  list-style-type: none;
}

.ra-timeline ul li {
  float: left;
  font-size: 10px;
  width: 225px;
  text-align: center;
  border-left: 1px solid #DDD;
  height: 53px;
}

.ra-timeline ul li:first-child {
  border:none;
}

.ra-timeline .bar {
  display: block;
  height: 41px;
  position: relative;
}

.ra-timeline .bar span {
  display: block;
  position: absolute;
  bottom: 0;
  width: 100%;
}

.high {
  background: #bf2531;
}

.medium {
  background: #d2a71c;
}

.low {
  background: #BCCEB6;
}
